{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    // ---- Path alias ----
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    // Next.js types
    "types": ["node", "next", "next/types", "next/image-types/global"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.cjs"
  ],
  "exclude": ["node_modules"],
  "plugins": [
    {
      "name": "next"
    }
  ]
}